<!-- Post-{{ post.ID }}  -->
<article
	class="{{ post.post_class }} w-full h-auto"
	id="{{ post.post_type }}-{{ post.ID }}"
>

	<header class="entry-header">
		<h2 class="entry-title">
			<a href="{{ post.link }}">
				{{ post.title }}
			</a>
		</h2>
	</header><!-- .entry-header -->

	<div class="entry-preview">
		{{ post.preview.length(50).force.read_more(__('Continue Reading', 'marusia'))|e('wp_kses_post') }}
	</div><!-- .entry-preview -->

	<footer class="entry-footer">
		<a href="{{ post.link }}">{{ __('Read more', 'marusia') }}</a>
	</footer><!-- .entry-footer -->

</article><!-- #{{ post.post_type }}-{{ post.ID }} -->

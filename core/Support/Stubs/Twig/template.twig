{% extends 'layouts/layout.singular.twig' %}

{% block content %}

	<div class="container">

		<!-- Page-{{ post.ID }}  -->
		<article
			class="{{ post.post_class }} w-full h-auto prose page-{{ SLUG }}"
			id="page-{{ post.ID }}"
		>

			<header class="entry-header page-{{ SLUG }}__header">
				<h1 class="entry-title page-{{ SLUG }}__title">{{ post.title }}</h1>
			</header><!-- .page-{{ SLUG }}__header -->

			<div class="entry-content page-{{ SLUG }}__content">
				{{ post.content|e('wp_kses_post') }}
			</div><!-- .page-{{ SLUG }}__content -->

			<footer class="entry-footer page-{{ SLUG }}__footer">
				{% if post.edit_link %}
					<a href="{{ post.edit_link }}">{{ __('Edit post', 'marusia') }}</a>
				{% endif %}
			</footer><!-- .page-{{ SLUG }}__footer -->

		</article><!-- #post-{{ post.ID }} -->

	</div>
{% endblock %}
